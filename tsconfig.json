{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
    },
  },
  "include": [
    "src"
  ],
}